<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_gravity="center"
        card_view:cardElevation="10dp"
        card_view:contentPadding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_recipe"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:src="@drawable/soup" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_recipe"
                android:layout_marginBottom="10dp"
                android:text="Caldinho de Cana com mingal..."
                android:textStyle="bold"
                android:maxLength="30"/>


            <ImageView
                android:id="@+id/iv_prepare_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/tv_title"
                android:layout_gravity="center"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_prepare_time" />

            <TextView
                android:id="@+id/tv_prepare_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/iv_prepare_time"
                android:gravity="center"
                android:text="1:30" />

            <ImageView
                android:id="@+id/iv_serves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:layout_toRightOf="@id/tv_prepare_time"
                android:src="@drawable/ic_serves" />

            <TextView
                android:id="@+id/tv_serves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/iv_serves"
                android:gravity="center"
                android:text="7" />

            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_title"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_menu_item" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>