<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/et_timer"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="00:00:15"
        android:textColor="@color/text_icons"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/et_description_timer"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_timer"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="OOOOOOOOOOOOOOOOOOOO"
        android:textColor="@color/text_icons"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_description_timer"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_start_stop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_play" />

        <ImageView
            android:id="@+id/iv_delete_timer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_delete" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/text_icons" />

</RelativeLayout>